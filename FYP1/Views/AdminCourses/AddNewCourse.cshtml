@{
ViewData["Title"] = "AddNewCourse";
Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row mt">
    <div class="col-lg-5">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Add new Course</h4>
            <form>
                <div class="form-group row">
                    <div class="col-sm-12">
                        <label>Course Full Name
                            <span class="error">*</span>
                        </label>
                        <input type="text" class="form-control" id="txtFullname">
                        <label class="error" id="lblFullname"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-4">
                        <label>Short Name
                            <span class="error">*</span>
                        </label>
                        <input type="text" class="form-control" id="txtShrtname">
                        <label class="error" id="lblShrtname"></label>
                    </div>
                    <div class="col-sm-4">
                        <label>Required Cr.Hr
                            <span class="error">*</span>
                        </label>
                        <input type="text" class="form-control" id="txtRequired">
                        <label class="error" id="lblRequired"></label>
                    </div>
                    <div class="col-sm-4">
                        <label>Course Cr.Hr
                            <span class="error">*</span>
                        </label>
                        <input type="text" class="form-control" id="txtCoursecrhr">
                        <label class="error" id="lblCoursecrhr"></label>
                    </div>
                </div>
                <button type="button" class="btn btn-primary btn-lg btn-block" id="btnCreate">Create</button>
            </form>
        </div>
    </div>
    <div class="col-lg-7">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> View all Courses</h4>
            <div class="adv-table">
                <table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered" id="hidden-table-info">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Course Name</th>
                            <th>Cr.Hr</th>
                            <th>Actions</th>
                            <!-- <th>isActive</th> -->
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="gradeX">
                            <td>23045</td>
                            <td>Computer Organization and Assemlbly Language </td>
                            <td class="hidden-phone">67</td>
                            <td>
                                <button class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></button>
                                <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                              </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- col-lg-12-->
</div>
