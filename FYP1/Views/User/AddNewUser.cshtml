@{
ViewData["Title"] = "Add New User";
Layout = "~/Views/Shared/_Layout.cshtml";

}

<div class="card card-custom gutter-b example example-compact">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="alert alert-custom alert-default" role="alert">
            <div class="alert-icon"><i class="flaticon-warning text-primary"></i></div>
            <div class="alert-text">Will be Created Only New User, No Update</div>
        </div>
        <form id="newuser">
            <div class="form-group row">
                <div class="col-sm-3">
                    <label>
                        NIC number
                        <span class="error">*</span>
                    </label>
                    <input type="text" class="form-control" placeholder="" id="txtNic" name="nic" autocomplete="off">
                </div>
                <div class="col-sm-3">
                    <label>
                        Name
                        <span class="error">*</span>
                    </label>
                    <input type="text" class="form-control" placeholder="" id="txtName" name="name">
                </div>
                <div class="col-sm-3">
                    <label>Father's Name</label>
                    <input type="text" class="form-control" placeholder="" id="txtFatherName">
                </div>



            </div>
            <div class="row">
                <div class="col-sm-9">
                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label>
                                Email
                                <span class="error">*</span>
                            </label>
                            <input type="text" class="form-control" placeholder="" id="txtEmail" name="email">
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Phone Number
                                <span class="error">*</span>
                            </label>
                            <input type="text" class="form-control" placeholder="" id="txtNumber" name="number">
                        </div>
                        <div class="col-sm-4">
                            <label>Date of birth</label>
                            <input type="text" class="form-control kt_datepicker_1" id="timeDOB1" readonly="readonly"
                                placeholder="Select date" />
                               
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-sm-4">
                            <label>Gender</label>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="gender" value="male">
                                    Male
                                </label>
                                &nbsp;
                                <label>
                                    <input type="radio" name="gender" value="female">
                                    Female
                                </label>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label>
                                Role
                                <span class="error">*</span>
                            </label>
                            <select class="form-control" id="dpdownRole">
                            </select>
                        </div>
                        <div class="col-sm-4">
                            <label id="lblprogram">
                                Program
                                <span class="error">*</span>
                            </label>
                            <select class="form-control" id="dpdownProgram" name="program">
                            </select>
                        </div>

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-7">
                            <label>Residential Address</label>
                            <input type="text" class="form-control" placeholder="" id="txtAddress">
                        </div>
                        <div class="col-sm-2">
                            <label>City</label>
                            <input type="text" class="form-control" placeholder="" id="txtCity">
                        </div>
                        <div class="col-sm-3">
                            <label>Country</label>
                            <input type="text" class="form-control" placeholder="" id="txtCountry">
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="image-input image-input-empty image-input-outline GetImage" id="kt_image_5"
                        style="background-image: url(LMS/assets/media/users/blank.png)">
                        <div class="image-input-wrapper" id="baseDecoded"></div>
                        <label class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow"
                            data-action="change" data-toggle="tooltip" title="" data-original-title="Change avatar">
                            <i class="fa fa-pen icon-sm text-muted"></i>
                            <input type="file" name="profile_avatar" accept=".png, .jpg, .jpeg" id="profile_avatar" />
                            <input type="hidden" name="profile_avatar_remove" />
                        </label>

                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow"
                            data-action="cancel" data-toggle="tooltip" title="Cancel avatar">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                        <span class="btn btn-xs btn-icon btn-circle btn-white btn-hover-text-primary btn-shadow"
                            data-action="remove" data-toggle="tooltip" title="Remove avatar">
                            <i class="ki ki-bold-close icon-xs text-muted"></i>
                        </span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-lg btn-block" id="btnSubmit">Submit</button>
        </form>
    </div>
</div>
<script src="~/LMS/lib/jquery-3.6.0.js"></script>
<script src="~/LMS/lib/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/LMS/ViewsJquery/AddNewUser.js"></script>