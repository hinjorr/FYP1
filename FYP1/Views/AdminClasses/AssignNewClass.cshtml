@{
ViewData["Title"] = "AssignNewClass";
Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="row">
    <form id="classes">
        <div class="col-lg-5">
            <div class="form-panel">
                <h4 class="mb"><i class="fa fa-angle-right"></i> Assign new Class</h4>
                <div class="row">

                    <div class="col-sm-5"></div>
                    <div class="col-sm-5">
                        <label>Current Semester
                        </label>
                        <input type="text" class="form-control" id="txtSemesterName" disabled>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-10">
                        <label>Program
                            <span class="error">*</span>
                        </label>
                        <select class="form-control " id="dpPrograms">
                        </select>
                    </div>
                </div>
                <label>Select Course
                    <span class="error">*</span>
                </label>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <select class="form-control " id="DpDownCourse">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-10">
                        <label>Class Strength
                            <span class="error">*</span>
                        </label>
                        <input type="text" class="form-control" placeholder="" id="txtClasStrength">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-5">
                        <label>Class Day
                            <span class="error">*</span>
                        </label>
                        <select class="form-control" id="dpDownClassDay">
                        </select>
                    </div>
                    <div class="col-sm-5">
                        <label>Class Time
                            <span class="error">*</span>
                        </label>
                        <select class="form-control" id="dpDownClassTime">

                        </select>
                    </div>
                </div>
                <button type="button" class="btn btn-primary btn-lg btn-block" id="btnSubmit">Submit</button>
            </div>
        </div>
    </form>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> View Classes</h4>
            <table id="ViewClasses" class="table table-striped table-bordered table-sm display" cellspacing="0"
                width="100%">
                <thead>
                    <tr>
                        <th>CID</th>
                        <th>Course Name</th>
                        <th>Program</th>
                        <th>Day</th>
                        <th class="numeric">Time</th>
                        <th class="numeric">Strength</th>
                        <th class="numeric">Enrolled</th>
                        <th class="numeric">Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <th>CID</th>
                    <th>Course Name</th>
                    <th>Program</th>
                    <th>Day</th>
                    <th class="numeric">Time</th>
                    <th class="numeric">Strength</th>
                    <th class="numeric">Enrolled</th>
                    <th class="numeric">Actions</th>
                </tfoot>

            </table>
        </div>
    </div>
</div>
<script src="~/LMS/lib/jquery-3.6.0.js"></script>
<script src="~/LMS/lib/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/LMS/ViewsJquery/AssignNewClass.js"></script>