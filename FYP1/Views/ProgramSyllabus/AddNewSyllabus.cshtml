@{
ViewData["Title"] = "Program Syllabus";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card card-custom gutter-b example example-compact">
    <div class="card-header">
        <h3 class="card-title">@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <div class="form-group row">
            <div class="col-lg-3">
                <h3>Select Program</h3>
                <select class="form-control Programs" id="dpPrograms">
                </select>
            </div>
            <div class="col-lg-3"></div>
            <div class="col-lg-4"></div>
            <div class="col-lg-2">
                <h4>
                    Total Cr.Hr
                </h4>
                <input type="text" class="form-control ToTalCrHr" disabled>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-12">
                <section>
                    <table class="table table-bordered table-hover table-checkable mt-10" id="tblsyllabus">
                        <thead>
                            <tr>
                                <th>Cno</th>
                                <th>Course</th>
                                <th>Pre Requisete</th>
                                <th style="width: 8%;">Required Cr Hr</th>
                                <th style="width: 6%;">Cr .Hr</th>
                                <th style="width: 8%;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="trClone">
                                <td class="RowNumber"></td>
                                <td> <select class="form-control dpCourse" style="width: 100%;"
                                        onchange="GetCrHr(this)">
                                    </select> </td>
                                <td><select class="form-control dpRequisete " style="width: 100%;"></select> </td>
                                <td><input type="text" class="form-control"> </td>
                                <td>
                                    <p class="CrHr"></p>
                                </td>
                                <td> <button class="btn btn-success btn-sm btnadd"
                                        onclick="GetIndex(this)">+</i></button><button
                                        class="btn btn-danger btn-sm btnremove">-</i></button></td>
                            </tr>

                        </tbody>
                    </table>
                </section>
                <div class="col-md-10"></div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary " id="btnsubmit">Submit</button>
                </div>

            </div>
        </div>
    </div>
</div>




<script src="~/LMS/lib/jquery-3.6.0.js"></script>
<script src="~/LMS/lib/jquery.validate.min.js"></script>
<script type="text/javascript" src="~/LMS/ViewsJquery/ProgramSyllabus.js"></script>